{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "apps/frontend/**",
      "use": "@vercel/static"
    }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "/app",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/health",
      "destination": "/api/index.py"
    },
    {
      "source": "/health/ready",
      "destination": "/api/index.py"
    },
    {
      "source": "/webhooks/github",
      "destination": "/api/index.py"
    },
    {
      "source": "/app",
      "destination": "/apps/frontend/index.html"
    },
    {
      "source": "/app/:path*",
      "destination": "/apps/frontend/:path*"
    },
    {
      "source": "/:file.js",
      "destination": "/apps/frontend/:file.js"
    },
    {
      "source": "/:file.css",
      "destination": "/apps/frontend/:file.css"
    },
    {
      "source": "/:file.json",
      "destination": "/apps/frontend/:file.json"
    },
    {
      "source": "/:file.mp4",
      "destination": "/apps/frontend/:file.mp4"
    },
    {
      "source": "/:file.webm",
      "destination": "/apps/frontend/:file.webm"
    },
    {
      "source": "/assets/:path*",
      "destination": "/apps/frontend/assets/:path*"
    }
  ],
  "headers": [
    {
      "source": "/:file.js",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        },
        {
          "key": "Content-Type",
          "value": "text/javascript; charset=utf-8"
        }
      ]
    },
    {
      "source": "/:file.css",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600"
        },
        {
          "key": "Content-Type",
          "value": "text/css; charset=utf-8"
        }
      ]
    },
    {
      "source": "/:file.mp4",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=604800"
        }
      ]
    },
    {
      "source": "/app",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=60, must-revalidate"
        },
        {
          "key": "Content-Type",
          "value": "text/html; charset=utf-8"
        }
      ]
    },
    {
      "source": "/health",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    },
    {
      "source": "/webhooks/github",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ],
  "env": {
    "ENVIRONMENT": "production",
    "ADW_WORKING_DIR": "/tmp"
  }
}
