{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "apps/frontend/**",
      "use": "@vercel/static"
    }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "/app",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/health",
      "destination": "/api/index.py"
    },
    {
      "source": "/health/ready",
      "destination": "/api/index.py"
    },
    {
      "source": "/webhooks/github",
      "destination": "/api/index.py"
    },
    {
      "source": "/app",
      "destination": "/apps/frontend/index.html"
    },
    {
      "source": "/app/(.*)",
      "destination": "/apps/frontend/$1"
    },
    {
      "source": "/(.*\\.(js|css|html|json|png|jpg|jpeg|gif|svg|mp4|webm|ico))",
      "destination": "/apps/frontend/$1"
    }
  ],
  "headers": [
    {
      "source": "/apps/frontend/(.*\\.(css|js))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/apps/frontend/(.*\\.html)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    },
    {
      "source": "/apps/frontend/(.*\\.(mp4|webm|png|jpg|jpeg|gif|svg|ico))",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=604800"
        }
      ]
    },
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ],
  "env": {
    "ENVIRONMENT": "production",
    "ADW_WORKING_DIR": "/tmp"
  }
}
