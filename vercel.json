{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "apps/frontend/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/health",
      "dest": "api/index.py"
    },
    {
      "src": "/health/ready",
      "dest": "api/index.py"
    },
    {
      "src": "/webhooks/github",
      "methods": ["POST"],
      "dest": "api/index.py"
    },
    {
      "src": "/app/(.*)",
      "dest": "/apps/frontend/$1"
    },
    {
      "src": "/app",
      "dest": "/apps/frontend/index.html"
    },
    {
      "src": "/",
      "dest": "/apps/frontend/index.html"
    }
  ],
  "env": {
    "ENVIRONMENT": "production",
    "ADW_WORKING_DIR": "/tmp"
  }
}
