# (REQUIRED) Anthropic Configuration to run Claude Code in programmatic mode
ANTHROPIC_API_KEY=

# (Optional) Claude Code Path - if 'claude' does not work run 'which claude' and paste that value here
CLAUDE_CODE_PATH=claude

# (Optional) Returns claude code to the root directory after every command
CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR=true

# ============================================================================
# GitHub Integration (Required for SDLC workflows)
# ============================================================================

# (REQUIRED) GitHub Personal Access Token
# Generate at: https://github.com/settings/tokens
# Required scopes: repo (full), workflow, read:org
GITHUB_TOKEN=

# (REQUIRED) Repository owner (your GitHub username or organization)
GITHUB_REPO_OWNER=

# (REQUIRED) Repository name
GITHUB_REPO_NAME=

# (REQUIRED) Webhook secret for GitHub webhook verification
# Generate a random string: openssl rand -hex 32
WEBHOOK_SECRET=

# (Optional) Port for webhook server (default: 8000)
ADW_WEBHOOK_PORT=8000
